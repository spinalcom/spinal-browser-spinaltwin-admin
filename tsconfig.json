{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "target": "es6"
  },
  "experimentalDecorators": true,
  "paths": {
    "@/*": [
      "src/*"
    ],
    "/@/*": [
      "src/*"
    ],
    "/@/img/*": [
      "src/assets/img/*"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "inclure": [
    "./src/**/*"
  ]
}